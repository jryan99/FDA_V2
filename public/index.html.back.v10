<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Fidelity Portfolio Demo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Plaid Link JS -->
  <script src="https://cdn.plaid.com/link/v2/stable/link-initialize.js"></script>
  <style>
    :root {
      --fidelity-green: #10713f;
      --fidelity-green-dark: #0b5e34;
      --fidelity-gray: #f5f5f5;
      --fidelity-border: #dee2e6;
      --fidelity-text: #222;
      --accent-blue: #1a2dab;
      --accent-red: #c00;
    }
    body {
      font-family: Arial, Helvetica, sans-serif;
      background: #fafbfa;
      color: var(--fidelity-text);
      margin: 0;
      padding: 0;
    }
    .topnav {
      background: var(--fidelity-green);
      color: #fff;
      min-height: 48px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 0 0 0;
    }
    .topnav .logo {
      font-size: 2rem;
      font-weight: bold;
      letter-spacing: 0.5px;
      padding: 0 32px;
      font-family: 'Arial Black', Arial, sans-serif;
    }
    .topnav .nav-links {
      display: flex;
      align-items: center;
      gap: 24px;
      flex: 1;
    }
    .topnav .nav-links span {
      font-size: 1rem;
      font-weight: 500;
      cursor: pointer;
    }
    .topnav .nav-links span:hover {
      text-decoration: underline;
    }
    .topnav .search {
      margin-right: 32px;
    }
    .topnav input[type="text"] {
      border-radius: 20px;
      border: none;
      padding: 6px 16px;
      font-size: 1rem;
      outline: none;
    }
    .secnav {
      background: var(--fidelity-green);
      color: #fff;
      border-bottom: 1px solid var(--fidelity-border);
      padding: 0 32px;
      display: flex;
      align-items: center;
      min-height: 44px;
      gap: 40px;
      font-size: 1.05rem;
      font-weight: 500;
    }
    .secnav span {
      color: #fff;
      cursor: pointer;
      padding: 12px 0;
    }
    .secnav span:hover {
      color: #e9f6ef;
    }
    .container {
      max-width: 1200px;
      margin: 32px auto 0 auto;
      padding: 0 24px;
    }
    .tabs {
      display: flex;
      gap: 36px;
      border-bottom: 2px solid var(--fidelity-border);
      margin-bottom: 24px;
      margin-top: 24px;
    }
    .tab {
      font-size: 1.1rem;
      font-weight: 600;
      color: #222;
      background: none;
      border: none;
      outline: none;
      padding: 12px 0;
      cursor: pointer;
      border-bottom: 3px solid transparent;
      transition: color 0.2s, border-bottom 0.2s;
    }
    .tab.active {
      color: var(--fidelity-green);
      border-bottom: 3px solid var(--fidelity-green);
    }
    .dashboard-main {
      display: flex;
      gap: 32px;
      flex-wrap: wrap;
    }
    .sidebar {
      flex: 0 0 300px;
      background: #fff;
      border-radius: 14px;
      box-shadow: 0 2px 8px rgba(44, 108, 75, 0.08);
      padding: 28px 24px;
      min-width: 260px;
      margin-bottom: 32px;
      border: 1px solid var(--fidelity-border);
    }
    .sidebar .sidebar-title {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 18px;
      color: var(--fidelity-green);
    }
    .sidebar .sidebar-balance {
      font-size: 1.4rem;
      font-weight: bold;
      margin-bottom: 16px;
    }
    .sidebar .sidebar-section {
      margin-bottom: 16px;
    }
    .sidebar .sidebar-section .label {
      font-size: 0.99rem;
      color: #666;
    }
    .sidebar .sidebar-section .value {
      font-size: 1.05rem;
      font-weight: 500;
    }
    .main-content {
      flex: 1 1 500px;
      min-width: 350px;
    }
    .card {
      background: #fff;
      border-radius: 14px;
      box-shadow: 0 2px 8px rgba(44, 108, 75, 0.08);
      padding: 28px 24px;
      margin-bottom: 32px;
      border: 1px solid var(--fidelity-border);
    }
    .card-title {
      font-size: 1.2rem;
      font-weight: 600;
      margin-bottom: 14px;
      color: var(--fidelity-green);
    }
    .balance-section {
      display: flex;
      align-items: center;
      gap: 24px;
      margin-bottom: 18px;
    }
    .balance-amount {
      font-size: 2.2rem;
      font-weight: bold;
      color: var(--fidelity-text);
    }
    .balance-change {
      font-size: 1.1rem;
      color: #228b22;
      font-weight: 500;
    }
    .balance-chart {
      width: 100%;
      height: 80px;
      background: linear-gradient(90deg, #e6f2ed 60%, #fff 100%);
      border-radius: 8px;
      margin: 18px 0;
      display: flex;
      align-items: flex-end;
      justify-content: flex-start;
    }
    .placeholder-chart {
      width: 95%;
      height: 60px;
      background: repeating-linear-gradient(
        to right,
        #d7eada,
        #d7eada 10px,
        #e6f2ed 10px,
        #e6f2ed 20px
      );
      border-radius: 6px;
      margin: 0 auto;
    }
    .info-card {
      background: #f9f9f9;
      border-radius: 10px;
      padding: 18px 20px;
      margin-top: 18px;
      font-size: 1rem;
      color: #222;
      border: 1px solid #e0e0e0;
    }
    .info-card a {
      color: var(--fidelity-green);
      text-decoration: underline;
      font-weight: 600;
    }
    .networth-row {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 32px;
      margin-top: 32px;
    }
    .networth-main {
      flex: 2;
      min-width: 320px;
    }
    .networth-side {
      flex: 1;
      min-width: 240px;
      margin-top: 32px;
    }
    .networth-tabs {
      display: flex;
      gap: 32px;
      margin-bottom: 16px;
      margin-top: 16px;
    }
    .networth-tab {
      font-size: 1.1rem;
      font-weight: 500;
      color: #222;
      background: none;
      border: none;
      cursor: pointer;
      border-bottom: 2px solid transparent;
      padding: 8px 0 8px 0;
      margin-right: 8px;
      transition: color 0.2s, border-bottom 0.2s;
    }
    .networth-tab.active {
      color: var(--fidelity-green);
      border-bottom: 2px solid var(--fidelity-green);
    }
    .networth-value {
      font-size: 2.2rem;
      font-weight: bold;
      margin-top: 10px;
      margin-bottom: 4px;
    }
    .networth-date {
      color: #666;
      font-size: 1rem;
      margin-bottom: 10px;
    }
    .networth-change {
      color: var(--accent-red);
      font-size: 1.1rem;
      margin-bottom: 18px;
    }
    .edit-btn, .add-btn, .back-btn {
      background: var(--fidelity-green);
      color: #fff;
      border: none;
      border-radius: 20px;
      padding: 12px 28px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      margin-top: 12px;
      margin-right: 12px;
      transition: background 0.2s;
      display: inline-block;
    }
    .edit-btn:hover, .add-btn:hover, .back-btn:hover {
      background: var(--fidelity-green-dark);
    }
    /* Link Accounts Interstitial */
    .link-accounts-container {
      background: #fff;
      border-radius: 14px;
      box-shadow: 0 2px 8px rgba(44, 108, 75, 0.08);
      border: 1px solid var(--fidelity-border);
      max-width: 600px;
      margin: 32px auto 0 auto;
      padding: 36px 32px 16px 32px;
    }
    .link-accounts-title {
      font-size: 1.4rem;
      font-weight: 700;
      margin-bottom: 20px;
      text-align: center;
    }
    .link-accounts-search {
      width: 100%;
      padding: 10px 16px;
      border: 1px solid #ccc;
      border-radius: 20px;
      font-size: 1.05rem;
      margin-bottom: 24px;
      outline: none;
      background: #fafbfa;
    }
    .provider-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 18px;
      margin-bottom: 28px;
    }
    .provider-logo {
      background: #fff;
      border: 1px solid #eee;
      border-radius: 8px;
      padding: 10px 0 10px 0;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 60px;
      gap: 8px;
      transition: box-shadow 0.2s;
      cursor: pointer;
    }
    .provider-logo img {
      max-height: 32px;
      max-width: 90px;
      object-fit: contain;
    }
    .link-accounts-note {
      display: flex;
      align-items: flex-start;
      font-size: 0.98rem;
      color: #444;
      margin-bottom: 16px;
      gap: 10px;
    }
    .link-accounts-additional {
      background: #f5f5f5;
      border-radius: 8px;
      padding: 18px 16px;
      font-size: 0.99rem;
      color: #222;
      margin-top: 16px;
    }
    @media (max-width: 900px) {
      .dashboard-main, .networth-row {
        flex-direction: column;
        gap: 0;
      }
      .sidebar, .networth-side {
        margin-bottom: 0;
      }
      .provider-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    @media (max-width: 600px) {
      .provider-grid {
        grid-template-columns: 1fr;
      }
      .link-accounts-container {
        padding: 18px 6px 6px 6px;
      }
    }
  </style>
</head>
<body>
  <!-- Top nav -->
  <div class="topnav">
    <div class="logo">Fidelity</div>
    <div class="nav-links">
      <span>CUSTOMER SERVICE</span>
      <span>PROFILE</span>
      <span>OPEN AN ACCOUNT</span>
      <span>FIDELITY ASSISTANT</span>
      <span>LOG OUT</span>
    </div>
    <div class="search">
      <input type="text" placeholder="Search or get a quote" aria-label="Search">
    </div>
  </div>
  <div class="secnav">
    <span>Accounts & Trade</span>
    <span>Planning & Advice</span>
    <span>News & Research</span>
    <span>Products</span>
    <span>Why Fidelity</span>
  </div>
  <div class="container">
    <!-- Tabs -->
    <div class="tabs" id="main-tabs">
      <button class="tab active" id="tab-summary" onclick="showTab('summary')">Summary</button>
      <button class="tab" id="tab-fullview" onclick="showTab('fullview')">Full View</button>
    </div>
    <!-- Summary Tab -->
    <div id="summary-tab" style="display:block;">
      <div class="dashboard-main">
        <!-- Sidebar -->
        <div class="sidebar">
          <div class="sidebar-title">All accounts</div>
          <div class="sidebar-balance">$500,000.00</div>
          <div class="sidebar-section">
            <div class="label">Investment</div>
            <div class="value">$500,000.00</div>
            <div class="label" style="margin-top:8px;">Retirement</div>
            <div class="value">$0.00</div>
          </div>
          <div class="sidebar-section">
            <div class="label">PROFIT SHARING</div>
            <div class="value">$0.00</div>
            <div class="label">BrokerageLink</div>
            <div class="value">$0.00</div>
          </div>
        </div>
        <!-- Main Content Area -->
        <div class="main-content">
          <div class="card">
            <div class="card-title">Balance</div>
            <div class="balance-section">
              <span class="balance-amount">$500,000.00</span>
              <span class="balance-change">+0.00 (0.00%)</span>
            </div>
            <div class="balance-chart">
              <div class="placeholder-chart"></div>
            </div>
            <div class="info-card">
              <b>Financial scams are on the rise. Add security to your account.</b><br>
              Safer than just a username and password, authenticator apps let you generate a unique code that you can use to log into your account.<br>
              <a href="#">Add security</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Full View Tab -->
    <div id="fullview-tab" style="display:none;">
      <div class="networth-row">
        <div class="networth-main">
          <a href="#" style="color:var(--accent-blue);text-decoration:none;font-size:1rem;display:inline-block;margin-bottom:16px;">&#8592; Back to Planning Summary</a>
          <div class="networth-tabs">
            <button class="networth-tab active">Net Worth</button>
            <button class="networth-tab">Spending</button>
            <button class="networth-tab">Budget</button>
            <button class="networth-tab">Debt</button>
          </div>
          <div class="networth-value">$500,000.00 <span title="info" style="font-size:1.2rem;color:#888;cursor:pointer;">&#9432;</span></div>
          <div class="networth-date">As of 07/01/2025</div>
          <div class="networth-change">+0.00 (0.00%) Last 90 days</div>
          <hr style="margin:28px 0 18px 0;">
          <button class="edit-btn" id="edit-link-accounts-btn">Edit/Link Accounts</button>
        </div>
        <div class="networth-side">
          <div style="font-weight:700;font-size:1.1rem;margin-bottom:10px;">Get a more complete picture</div>
          <div style="font-size:1rem;margin-bottom:18px;">
            Adding your non-Fidelity accounts can help us provide a more complete assessment of your financial picture.
          </div>
          <button class="add-btn" id="add-non-fidelity-btn">Add a non-Fidelity account</button>
        </div>
      </div>
    </div>
    <!-- Link Accounts Interstitial -->
    <div id="link-accounts-screen" style="display:none;">
      <div class="link-accounts-container">
        <div class="link-accounts-title">Link your accounts</div>
        <input class="link-accounts-search" type="text" placeholder="Find my financial provider" />
        <div class="provider-grid">
          <!-- Openbank as first provider, icon only -->
          <div class="provider-logo" id="openbank-provider">
            <img src="/image1.png" alt="Openbank" style="max-height:32px;max-width:90px;">
          </div>
          <div class="provider-logo"><img src="https://upload.wikimedia.org/wikipedia/commons/3/30/American_Express_logo_%282018%29.svg" alt="American Express"></div>
          <div class="provider-logo"><img src="https://upload.wikimedia.org/wikipedia/commons/1/16/Bank_of_America_logo.svg" alt="Bank of America"></div>
          <div class="provider-logo"><img src="https://upload.wikimedia.org/wikipedia/commons/3/3e/Capital_One_logo.svg" alt="Capital One"></div>
          <div class="provider-logo"><img src="https://upload.wikimedia.org/wikipedia/commons/1/1e/Charles_Schwab_Corporation_logo_2021.svg" alt="Charles Schwab"></div>
          <div class="provider-logo"><img src="https://upload.wikimedia.org/wikipedia/commons/6/6a/JPMorgan_Chase_logo_2008.svg" alt="Chase"></div>
          <div class="provider-logo"><img src="https://upload.wikimedia.org/wikipedia/commons/4/41/Citi.svg" alt="Citi"></div>
          <div class="provider-logo"><img src="https://upload.wikimedia.org/wikipedia/commons/7/7e/ETrade_logo.svg" alt="E*TRADE"></div>
          <div class="provider-logo"><img src="https://upload.wikimedia.org/wikipedia/commons/0/0e/Vanguard_Group_logo_2014.svg" alt="Vanguard"></div>
          <div class="provider-logo"><img src="https://upload.wikimedia.org/wikipedia/commons/5/53/Wells_Fargo_Bank.svg" alt="Wells Fargo"></div>
        </div>
        <div class="link-accounts-note">
          <svg width="20" height="20" fill="none"><rect width="20" height="20" rx="4" fill="#e0e0e0"/><path d="M10 5v5l3 3" stroke="#666" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"/></svg>
          <span>eMoney uses multi-level encryption to protect your data and credentials</span>
        </div>
        <div class="link-accounts-additional">
          <b>Add additional assets or liabilities</b><br>
          Certain asset types, such as real estate, and certain liabilities, can't be linked automatically
        </div>
        <button class="back-btn" id="back-to-main-btn" style="margin-top:24px;">Back</button>
      </div>
    </div>
  </div>
  <footer style="text-align:center;padding:32px 0 24px 0;color:#888;font-size:0.95rem;">
    Fidelity Brokerage Services LLC, Member NYSE, SIPC. &copy; 2025 Fidelity Investments.
  </footer>
  <script>
    // Tab switching logic
    function showTab(tab) {
      document.getElementById('tab-summary').classList.remove('active');
      document.getElementById('tab-fullview').classList.remove('active');
      document.getElementById('summary-tab').style.display = 'none';
      document.getElementById('fullview-tab').style.display = 'none';
      document.getElementById('link-accounts-screen').style.display = 'none';
      document.getElementById('main-tabs').style.display = '';
      if (tab === 'summary') {
        document.getElementById('tab-summary').classList.add('active');
        document.getElementById('summary-tab').style.display = 'block';
      } else if (tab === 'fullview') {
        document.getElementById('tab-fullview').classList.add('active');
        document.getElementById('fullview-tab').style.display = 'block';
      }
    }

    // Show link accounts interstitial on button click, hide main tabs
    document.addEventListener('DOMContentLoaded', function() {
      var addBtn = document.getElementById('add-non-fidelity-btn');
      var linkAccountsScreen = document.getElementById('link-accounts-screen');
      var mainTabs = document.getElementById('main-tabs');
      var summaryTab = document.getElementById('summary-tab');
      var fullviewTab = document.getElementById('fullview-tab');
      var backBtn = document.getElementById('back-to-main-btn');
      var openbankProvider = document.getElementById('openbank-provider');
      if (addBtn && linkAccountsScreen) {
        addBtn.onclick = function() {
          if (summaryTab) summaryTab.style.display = 'none';
          if (fullviewTab) fullviewTab.style.display = 'none';
          if (mainTabs) mainTabs.style.display = 'none';
          linkAccountsScreen.style.display = 'block';
        };
      }
      if (backBtn && linkAccountsScreen) {
        backBtn.onclick = function() {
          linkAccountsScreen.style.display = 'none';
          if (mainTabs) mainTabs.style.display = '';
          // Show the fullview tab again
          if (fullviewTab) {
            document.getElementById('tab-fullview').classList.add('active');
            document.getElementById('tab-summary').classList.remove('active');
            summaryTab.style.display = 'none';
            fullviewTab.style.display = 'block';
          }
        };
      }
      // Plaid Link logic for Openbank
      if (openbankProvider) {
        openbankProvider.onclick = async function() {
          try {
            const res = await fetch('/api/create_link_token', { method: 'POST' });
            const data = await res.json();
            if (!data.link_token) {
              alert('Could not get Plaid link token');
              return;
            }
            const handler = Plaid.create({
              token: data.link_token,
              onSuccess: function(public_token, metadata) {
                alert('Bank linked! (public_token: ' + public_token + ')');
                // You can now exchange the public_token on the backend
              },
              onExit: function(err, metadata) {
                // Handle exit
              }
            });
            handler.open();
          } catch (e) {
            alert('Plaid Link error: ' + e.message);
          }
        };
      }
    });
  </script>
</body>
</html>

